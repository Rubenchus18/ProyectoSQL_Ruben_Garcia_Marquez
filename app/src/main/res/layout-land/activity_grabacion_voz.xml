<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="#E5404E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            app:srcCompat="@drawable/logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#EDECEC"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/actividadAnterior"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_rew" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#E4404E"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:text="@string/Grabacion_de_voz"
            android:textColor="#EDECEC"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonIniciarGrabacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#E3404E"
            android:text="Iniciar grabacion"
            android:textColor="#2B2D30"
            android:textColorHint="#E2404E"
            android:textColorLink="#E2404E" />

        <Button
            android:id="@+id/buttonDetenerGrabacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detener grabacion" />

        <Button
            android:id="@+id/buttonEscucharGrabacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escuchar Grabacion" />
    </LinearLayout>

</LinearLayout>