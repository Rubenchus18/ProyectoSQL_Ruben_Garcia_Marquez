<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F8EEEE"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="#DE2525"
        android:backgroundTint="#E43D4F"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.55"
            android:background="#E43F4D"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:rotationX="15"
            android:text="Drafter"
            android:textColor="#FBFBFB"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="clip_horizontal"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="85"
        android:background="#FFD1D1"
        android:backgroundTint="#FDF9F9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/audiowide"
            android:foregroundTint="#000000"
            android:gravity="center"
            android:shadowColor="#4D4A4A"
            android:text="@string/Usuario"
            android:textColor="#050505"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edittextusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:inputType="text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:text="@string/Contraseña"
            android:textColor="#090909"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editTextTextContraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:inputType="text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonInciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#E23D4E"
            android:fontFamily="@font/audiowide"
            android:foregroundTint="#F9F9F9"
            android:text="@string/InicioSesion"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonRegistarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#E23D4E"
            android:fontFamily="@font/audiowide"
            android:text="@string/Registrarse"
            android:textColor="#F8F6F6"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/AceptarPoliticas" />
    </LinearLayout>

</LinearLayout>